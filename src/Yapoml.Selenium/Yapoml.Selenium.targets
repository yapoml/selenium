<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <AdditionalFiles Include="**\*.po.yaml" />
    <None Remove="**\*.po.yaml" />
    <AdditionalFiles Include="**\*.po.yml" />
    <None Remove="**\*.po.yml" />
    <AdditionalFiles Include="**\*.pc.yaml" />
    <None Remove="**\*.pc.yaml" />
    <AdditionalFiles Include="**\*.pc.yml" />
    <None Remove="**\*.pc.yml" />

    <Compile Update="**\*.cs">
      <DependentUpon Condition="Exists('%(RecursiveDir)%(Filename).po.yaml')">%(Filename).po.yaml</DependentUpon>
      <DependentUpon Condition="Exists('%(RecursiveDir)%(Filename).po.yml')">%(Filename).po.yml</DependentUpon>
      <DependentUpon Condition="Exists('%(RecursiveDir)%(Filename).pc.yaml')">%(Filename).pc.yaml</DependentUpon>
      <DependentUpon Condition="Exists('%(RecursiveDir)%(Filename).pc.yml')">%(Filename).pc.yml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup Condition="'$(ImplicitUsings)' == 'true' or '$(ImplicitUsings)' == 'enable'">
    <Using Include="Yapoml.Selenium" />
    <Using Include="$(RootNamespace)" />
  </ItemGroup>

</Project>